<html>
<head>
    <title>Customers</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h1>Customers</h1>
    <a href="/">Home</a> || <a href="/customers">Customers</a> || <a href="/cats">Cats</a> || <a href="/reservations">Reservations</a> || <a href="/services">Services</a> || <a href="/purchased_services">Purchased Services</a> || <a href="/room_types">Room Types</a>
    <p>&nbsp;</p>
    <div id="tablediv">
        <table id="customer-table" border="1" cellpadding="5">
            <caption style="text-align:left"><strong>Browse existing customers:</strong></caption>
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
            </thead>
                <tbody>
                    <tr>
                    {{#each data}}
                    <tr data-value={{this.customer_id}}>
                        <td>{{this.customer_id}}</td>
                        <td>{{this.first_name}}</td>
                        <td>{{this.last_name}}</td>
                        <td>{{this.phone}}</td>
                        <td><a href="javascript:void(0);" onclick="moveText([{{this.customer_id}}, '{{this.first_name}}', '{{this.last_name}}', '{{this.phone}}'], ['customer_id_update', 'first_name_update', 'last_name_update', 'phone_update'])">Edit</a></td>
                    {{/each}}
                    </tr>
            </tbody>
            <script src="../js/move_text.js"></script>
        </table>
    </div>

    <p>&nbsp;</p>

    {{!-- Add Form --}}
    <div class="addform">
        <form id="add-customer-form" method="POST" action="/add-customer-form">
            <fieldset>
                <legend><strong>Add New Customer</strong></legend>
                <label for="first_name"><b>First Name: </b> </label>
                <input type="text" id="first_name" name="first_name" required>
                
                <label for="last_name_add"><b>Last Name: </b> </label>
                <input type="text" id="last_name" name="last_name" required>

                <label for="phone"><b>Phone Number: </b> </label>
                <input type="text" id="phone" name="phone" required><br>
            </fieldset>
            <input type="submit" value="Submit">
            <input type="button" value="Reset">
          </form>
    </div>

    {{!-- Update Form --}}
    <div class="updateform" style="display:none">
        <form id="update-customer-form">
            <fieldset>
                <legend><strong>Update Existing Customer</strong></legend>
                <p style="display:inline"><b>Customer ID: </b></p>
                <p id="customer_id_update" style="display:inline"></p>

                <label for="first_name_update"><b>First Name: </b> </label>
                <input type="text" id="first_name_update" name="first_name_update" required>

                <label for="last_name_update"><b>Last Name: </b> </label>
                <input type="text" id="last_name_update" name="last_name_update" required>

                <label for="phone_update"><b>Phone Number: </b></label>
                <input type="text" id="phone_update" name="phone_update" required><br>
            </fieldset>
            <input type="submit" value="Submit">
            <input type="button" value="Reset">
          </form>
          <script src="../js/update_customer.js"></script>
    </div>

</body>
</html>