<html>
<head>
    <title>Room Types</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h1>Room Types</h1>
    <a href="/">Home</a> || <a href="/customers">Customers</a> || <a href="/cats">Cats</a> || <a href="/reservations">Reservations</a> || <a href="/services">Services</a> || <a href="/purchased_services">Purchased Services</a> || <a href="/room_types">Room Types</a>
    <p>&nbsp;</p>
    <div>
        <table id="room-table" border="1" cellpadding="4">
            <caption style="text-align:left"><strong>Browse existing room types:</strong></caption>
            <thead>
                <tr>
                    <th>Room ID</th>
                    <th>Room Name</th>
                    <th>Rate</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr data-value={{this.room_id}}>
                    <td>{{this.room_id}}</td>
                    <td>{{this.room_name}}</td>
                    <td>{{this.rate}}</td>
                    <td><a href="javascript:void(0);" onclick="moveText([{{this.room_id}}, '{{this.room_name}}', '{{this.rate}}'], ['room_id_update', 'room_name_update', 'rate_update'])">Edit</a></td>
                    <td><a href="javascript:void(0);" onclick="moveText([{{this.room_id}}, '{{this.room_name}}'], ['room_id_delete', 'room_name_delete'])">Delete</a></td>
                </tr>
                {{/each}}                
            </tbody>
        </table>
    </div>

    <p>&nbsp;</p>

    <div class="add-room-form">
        <form class="add-room-form" method="POST" action="/add-room-form">
            <fieldset>
                <legend><strong>Add New Room Type</strong></legend>
                <label for="add-room-name">Room Name: </label>
                <input type="text" id="add-room-name" name="add-room_name">
                <label for="add-rate">Rate: </label>
                <input type="text" id="add-rate" name="add-rate">
            </fieldset>
            <input type="submit" value="Submit">
            <input type="button" value="Reset">
          </form>
    </div>

    <div class="update-room-form">
        <form>
            <fieldset>
                <legend><strong>Update Existing Room Type</strong></legend>
                <label for="room_id_update">Room ID: </label>
                <input type="text" id="room_id_update" name="room_id" value="1">
                <label for="room_name_update">Room Name: </label>
                <input type="text" id="room_name_update" name="room_name_update" value="Single">
                <label for="rate_update">Rate: </label>
                <input type="text" id="rate_update" name="rate_update" value="40.32">
            </fieldset>
            <input type="submit" value="Submit">
            <input type="button" value="Reset">
          </form>
          <script src="../js/update_room_types.js"></script>
    </div>

    <div class="delete-form">
        <form>
            <fieldset>
                <legend><strong>Delete Existing Room Type</strong></legend>
                <p>Click Confirm to delete the following room type:</p>
                <label for="room_id_delete">Room ID: </label>
                <input type="text" id="room_id_delete" name="room_id" value="1">
                <label for="room_name_delete">Room Name: </label>
                <input type="text" id="room_name_delete" name="room_name_delete" value="Single">
            </fieldset>
            <input type="submit" value="Confirm" onclick="deleteRoom(document.getElementById('room_id_delete').value)">
            <input type="button" value="Reset">
          </form>
              <script src="./js/delete_room.js"></script>
    </div>

    <script src="./js/move_text.js"></script>
</body>
</html>
